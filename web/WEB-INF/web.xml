<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>Servlets.InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>Servlets.CerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarVendedores</servlet-name>
        <servlet-class>Servlets.RegistrarVendedores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesionVendedor</servlet-name>
        <servlet-class>Servlets.CerrarSesionVendedor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubirArchivos</servlet-name>
        <servlet-class>Servlets.SubirArchivos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreacionEvento</servlet-name>
        <servlet-class>Servlets.CreacionEvento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeleccionFecha</servlet-name>
        <servlet-class>Servlets.SeleccionFecha</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuardarContrato</servlet-name>
        <servlet-class>Servlets.GuardarContrato</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CambiarEstadoContratoGuardado</servlet-name>
        <servlet-class>Servlets.CambiarEstadoContratoGuardado</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/InicioSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarVendedores</servlet-name>
        <url-pattern>/RegistrarVendedores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesionVendedor</servlet-name>
        <url-pattern>/CerrarSesionVendedor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubirArchivos</servlet-name>
        <url-pattern>/SubirArchivos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreacionEvento</servlet-name>
        <url-pattern>/CreacionEvento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeleccionFecha</servlet-name>
        <url-pattern>/SeleccionFecha</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuardarContrato</servlet-name>
        <url-pattern>/GuardarContrato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CambiarEstadoContratoGuardado</servlet-name>
        <url-pattern>/CambiarEstadoContratoGuardado</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
